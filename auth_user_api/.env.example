# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# MongoDB Configuration
MONGODB_URI=mongodb://username:password@host:port/database

# JWT Configuration
JWT_SECRET=your-secure-random-jwt-secret
# JWT_EXPIRATION=86400000  # Optional, defaults to 24 hours

# Application Configuration
FRONTEND_URL=https://your-frontend-url.com
PORT=8080  # Optional, defaults to 8080

# CORS Configuration
ALLOWED_ORIGINS=https://your-frontend-url.com,https://another-allowed-origin.com

# Spring Configuration
SPRING_PROFILES_ACTIVE=prod  # Use 'dev' for development, 'prod' for production 