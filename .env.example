# MongoDB
MONGO_ROOT_PASSWORD=your_secure_password_here

# JWT Authentication
JWT_SECRET=your_jwt_secret_here

# Services Configuration
AUTH_SERVICE_PORT=8081
TIERLIST_SERVICE_PORT=8082
CHAT_SERVICE_PORT=8083

# Frontend Configuration
EXPO_PUBLIC_API_URL=http://localhost:8081
EXPO_PUBLIC_WEBSOCKET_URL=ws://localhost:8083

# Development Settings
NODE_ENV=development
DEBUG=true

# Production Settings (uncomment when deploying)
# NODE_ENV=production
# EXPO_PUBLIC_API_URL=https://your-api-domain.com

# OAuth2 Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Auth Service Environment Variables
AUTH_SERVICE_JWT_SECRET=your-jwt-secret
AUTH_SERVICE_JWT_EXPIRATION=86400000
POSTGRES_AUTH_DB=auth_db

# Tier List Service Environment Variables
POSTGRES_TIER_DB=tierlist_db

# Chat Service Environment Variables
POSTGRES_CHAT_DB=chat_db

# Database Environment Variables
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Nginx Environment Variables
NGINX_HOST=example.com
NGINX_API_HOST=api.example.com
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/fullchain.pem
SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/privkey.pem 

# AWS Credentials for Image Storage Service (S3)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_S3_REGION=your_aws_region_here
AWS_S3_BUCKET=your_aws_bucket_name_here 
